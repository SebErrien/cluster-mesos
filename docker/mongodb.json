{
  "id": "/db/mongodb",
  "instances": 1,
  "cpus": 0.5,
  "mem": 256,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mongo:3.0.2",
       "network": "BRIDGE",
       "privileged": true,
       "portMappings": [
         { "containerPort": 27017 , "protocol": "tcp" }
       ]
    }
  },
   "env": {
      "SERVICE_NAME": "mongodb"
   }
}
